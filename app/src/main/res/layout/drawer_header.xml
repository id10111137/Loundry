<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorAccent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <net.steamcrafted.materialiconlib.MaterialIconView
        android:id="@+id/IcUser"
        android:layout_width="@dimen/m_100dp"
        android:layout_height="@dimen/m_100dp"
        android:scaleType="center"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        app:materialIcon="bell_ring_outline"
        app:materialIconColor="#FFFFFF"
        app:materialIconSize="@dimen/m_80dp" />


    <TextView
        android:id="@+id/id_nameheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textColor="#FFFFFF"
        android:text="Tatang Roswandi Ganda Wijaya"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>
